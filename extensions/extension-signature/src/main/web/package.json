{
  "private": true,
  "name": "@keycloak-competence-center/keycloak-signature",
  "version": "2.0.0",
  "description": "A companion webcomponent for the keycloak signature extension",
  "license": "MIT",
  "author": "Inventage AG <info@inventage.com>",
  "type": "module",
  "main": "dist/keycloak-signature.js",
  "module": "dist/keycloak-signature.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "cem analyze",
    "analyze:watch": "npm run analyze -- --watch",
    "build": "npm run clean && tsc && rollup -c && npm run analyze",
    "build:scss": "node scripts/build-scss.js",
    "checksize": "rollup -c ; cat keycloak-signature.bundled.js | gzip -9 | wc -c ; rm keycloak-signature.bundled.js",
    "clean": "rimraf dist",
    "format": "run-s -l format:*",
    "format:prettier": "prettier \"**/*.{cjs,html,js,json,md,ts,scss}\" --ignore-path ./.eslintignore --write",
    "format:eslint": "eslint 'src/**/*.ts' --fix",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:prettier": "prettier \"**/*.{cjs,html,js,json,md,ts,scss}\" --ignore-path ./.eslintignore --check",
    "lint:analyzer": "lit-analyzer",
    "lint:types": "tsc --noEmit --pretty",
    "lint:stylelint": "stylelint 'src/**/*.scss'",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "start": "run-p serve watch:scss",
    "test": "wtr",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "test:watch": "wtr --watch",
    "postinstall": "npm run build:scss",
    "watch:scss": "onchange -i 'src/**/*.scss' -- npm run build:scss"
  },
  "types": "dist/keycloak-signature.d.ts",
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.8.4",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@web/dev-server": "^0.3.1",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/test-runner": "^0.17.1",
    "@web/test-runner-playwright": "^0.10.1",
    "eslint": "^8.49.0",
    "fast-glob": "^3.3.1",
    "koa-proxies": "^0.12.3",
    "lit-analyzer": "^1.2.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.2",
    "rollup-plugin-summary": "^2.0.0",
    "sass": "^1.68.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "~4 <=4.9.3"
  },
  "keywords": [
    "lit",
    "lit-element",
    "typescript",
    "web-components"
  ],
  "customElements": "custom-elements.json"
}
